{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! If we have a tag cover, display that - else blog cover - else nothing }}
<header id="header" class="home-header blog-background banner-mask lazy no-cover {{#if @blog.cover}}" style="display:table;background-image: url({{@blog.cover}}){{else}}no-cover{{/if}}">
    <div class="header-wrap">
        <div class="home-info-container">
            <a href="/"><h2>This is about</h2></a>
            <h4>[{{tag.name}}]</h4>
        </div>
    </div>
</header>

{{! The main content area on the homepage }}
<main class="content" role="main" id="main">

    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{> "loop"}}

</main>
