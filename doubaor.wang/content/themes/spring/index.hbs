{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The big featured header }}

<header id="header" class="home-header blog-background banner-mask lazy no-cover {{#if @blog.cover}}" style="display:table;background-image: url({{@blog.cover}}){{else}}no-cover{{/if}}">
    <div class="header-wrap">
        <div class="home-info-container">
            <a href="/"><h2>{{@blog.title}}</h2></a>
            <h4>{{@blog.description}}</h4>
        </div>
        <div class="arrow_down" data-offset="-45">
               <a href="javascript:;"></a>
        </div>
    </div>
</header>

{{! The main content area on the homepage }}
<main id="main" class="content" role="main">

    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{> "loop"}}

</main>
